        let currentDemoQuestion = 0;
        let demoScore = 0;
        let selectedAnswer = null;

        function loadDemoQuestion() {
            if (currentDemoQuestion >= demoQuestions.length) {
                showDemoResults();
                return;
            }

            const question = demoQuestions[currentDemoQuestion];
            document.getElementById('demo-question').textContent = question.question;
            document.getElementById('demo-current').textContent = currentDemoQuestion + 1;
            document.getElementById('demo-total').textContent = demoQuestions.length;

            // Update progress
            const progress = ((currentDemoQuestion) / demoQuestions.length) * 100;
            document.getElementById('demo-progress').value = progress;

            const optionsContainer = document.getElementById('demo-options');
            optionsContainer.innerHTML = '';

            question.options.forEach((option, index) => {
                const button = document.createElement('button');
                button.className = 'btn btn-outline btn-lg w-full text-left justify-start hover:btn-primary transition-all duration-300';
                button.innerHTML = `
                    <span class="w-8 h-8 rounded-full border-2 border-current flex items-center justify-center mr-4 text-sm font-bold">
                        ${String.fromCharCode(65 + index)}
                    </span>
                    ${option}
                `;
                button.onclick = () => selectDemoAnswer(index, button);
                optionsContainer.appendChild(button);
            });

            // Reset submit button
            document.getElementById('demo-submit').disabled = true;
            selectedAnswer = null;
        }

        function selectDemoAnswer(index, button) {
            // Remove previous selection
            document.querySelectorAll('#demo-options button').forEach(btn => {
                btn.classList.remove('btn-primary');
                btn.classList.add('btn-outline');
            });

            // Highlight selected
            button.classList.remove('btn-outline');
            button.classList.add('btn-primary');

            selectedAnswer = index;
            document.getElementById('demo-submit').disabled = false;
        }

        function submitDemoAnswer() {
            if (selectedAnswer === null) return;

            const question = demoQuestions[currentDemoQuestion];
            const buttons = document.querySelectorAll('#demo-options button');
            const isCorrect = selectedAnswer === question.correct;

            if (isCorrect) demoScore++;

            buttons.forEach((button, index) => {
                button.disabled = true;
                button.classList.remove('btn-primary', 'btn-outline');

                if (index === question.correct) {
                    button.classList.add('btn-success');
