                    <span class="text-2xl mr-3">${isCorrect ? '‚úÖ' : 'üí°'}</span>
                    <div>
                        <h4 class="font-bold">${isCorrect ? 'Correct!' : 'Good try!'}</h4>
                        <p class="text-sm">${question.explanation}</p>
                    </div>
                </div>
            `;
            document.getElementById('demo-quiz').appendChild(explanationDiv);

            // Disable buttons
            document.getElementById('demo-submit').disabled = true;
            document.getElementById('demo-skip').disabled = true;

            setTimeout(() => {
                explanationDiv.remove();
                currentDemoQuestion++;
                document.getElementById('demo-skip').disabled = false;
                loadDemoQuestion();
            }, 3000);
        }

        function skipDemoQuestion() {
            currentDemoQuestion++;
            loadDemoQuestion();
        }

        function showDemoHint() {
            const question = demoQuestions[currentDemoQuestion];
            const hints = [
                "Think about common greetings you might know.",
                "Consider the language family and similar words.",
                "This is a basic courtesy word used daily.",
                "Remember common phrases from movies or songs.",
                "Think about the cultural context of the language."
            ];

            alert(`üí° Hint: ${hints[currentDemoQuestion] || hints[0]}`);
        }

        function showDemoResults() {
            document.getElementById('demo-quiz').style.display = 'none';
            document.getElementById('demo-results').style.display = 'block';

            const percentage = Math.round((demoScore / demoQuestions.length) * 100);
            document.getElementById('demo-final-score').textContent = `${demoScore}/${demoQuestions.length}`;

            // Update emoji and message based on score
            const emoji = percentage >= 80 ? 'üéâ' : percentage >= 60 ? 'üòä' : percentage >= 40 ? 'üôÇ' : 'üí™';
            const message = percentage >= 80 ? 'Excellent work!' :
                           percentage >= 60 ? 'Great job!' :
                           percentage >= 40 ? 'Good effort!' : 'Keep practicing!';

            document.getElementById('demo-emoji').textContent = emoji;
            document.getElementById('demo-score-text').textContent = message;
        }

        function restartDemo() {
            currentDemoQuestion = 0;
            demoScore = 0;
            selectedAnswer = null;
            document.getElementById('demo-quiz').style.display = 'block';
            document.getElementById('demo-results').style.display = 'none';
            loadDemoQuestion();
        }

        // Initialize everything when the page loads
        document.addEventListener('DOMContentLoaded', () => {
            cycleLanguages();
            animateCounter(document.getElementById('user-count'), 2500000);
            animateCounter(document.getElementById('language-count'), 50);
            animateCounter(document.getElementById('lessons-count'), 100000000);
            loadDemoQuestion();

            // Enhanced Intersection Observer for animations
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        if (entry.target.classList.contains('card')) {
                            entry.target.classList.add('animate__animated', 'animate__fadeInUp');
                        } else if (entry.target.classList.contains('stats')) {
                            entry.target.classList.add('animate__animated', 'animate__zoomIn');
                        }
                    }
                });
            }, {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            });

            // Observe elements for animations
            document.querySelectorAll('.card, .stats').forEach(element => {
                observer.observe(element);
            });

            // Add smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });

            // Add parallax effect to floating elements
            window.addEventListener('scroll', () => {
                const scrolled = window.pageYOffset;
                const parallax = document.querySelectorAll('.floating');
                const speed = 0.5;

                parallax.forEach(element => {
                    const yPos = -(scrolled * speed);
                    element.style.transform = `translateY(${yPos}px)`;
                });
            });

            // Add hover effects to feature cards
            document.querySelectorAll('.card-hover').forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-10px) scale(1.02)';
                });

                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });

            // Animate online users counter in footer
            setInterval(() => {
                const currentUsersElement = document.getElementById('current-users');
                if (currentUsersElement) {
                    const currentCount = parseInt(currentUsersElement.textContent.replace(',', ''));
                    const variation = Math.floor(Math.random() * 20) - 10; // ¬±10 users
                    const newCount = Math.max(2500, currentCount + variation);
                    currentUsersElement.textContent = newCount.toLocaleString();
                }
            }, 5000);

            // Add newsletter subscription functionality
            const newsletterForm = document.querySelector('footer input[type="email"]').parentElement;
            const emailInput = newsletterForm.querySelector('input[type="email"]');
            const subscribeBtn = newsletterForm.querySelector('button');

            subscribeBtn.addEventListener('click', () => {
                const email = emailInput.value.trim();
                if (email && email.includes('@')) {
                    subscribeBtn.innerHTML = '<span class="loading loading-spinner loading-sm"></span> Subscribing...';
                    subscribeBtn.disabled = true;

                    setTimeout(() => {
                        subscribeBtn.innerHTML = '‚úÖ Subscribed!';
                        subscribeBtn.classList.remove('btn-primary');
                        subscribeBtn.classList.add('btn-success');
                        emailInput.value = '';

                        setTimeout(() => {
                            subscribeBtn.innerHTML = 'Subscribe';
                            subscribeBtn.classList.remove('btn-success');
                            subscribeBtn.classList.add('btn-primary');
                            subscribeBtn.disabled = false;
                        }, 3000);
                    }, 2000);
                } else {
                    emailInput.classList.add('input-error');
                    setTimeout(() => emailInput.classList.remove('input-error'), 3000);
                }
            });

            // Add typing indicator to hero section
            const heroSection = document.querySelector('.hero');
            let typingTimeout;

            window.addEventListener('scroll', () => {
                clearTimeout(typingTimeout);
                typingTimeout = setTimeout(() => {
                    // Add subtle scroll-based animations
                    const scrollPercent = window.pageYOffset / (document.documentElement.scrollHeight - window.innerHeight);
                    document.body.style.setProperty('--scroll-percent', scrollPercent);
                }, 10);
            });
        });
    </script>
</body>
